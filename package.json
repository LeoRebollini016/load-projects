{
  "name": "projects-angular",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start:frontend": "npm --workspace frontend start",
    "start:backend": "npm --workspace backend start",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "build:frontend": "npm --workspace frontend run build",
    "build:backend": "npm --workspace backend run build",
    "build": "npm run build:frontend && npm run build:backend",
    "deploy": "npm run build: frontend && ngh --dir=frontend/dist/frontend"
  },
  "author": "Leo Rebollini",
  "license": "ISC",
  "keywords": [],
  "description": "",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
